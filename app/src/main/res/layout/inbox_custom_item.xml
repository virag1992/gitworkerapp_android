<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_list"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/rlImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/profileplaceholder" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rlImage">


            <TextView
                android:id="@+id/txtTile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kevin Howard"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTile2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTile1"
                android:layout_marginTop="5dp"
                android:text="Kevin Howard" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
